//////////////////////////////////////////////////////////////////////////////////
// listSelect
//   [designpattern (String) "touch" or "mouse"]
//   [class (String)] class name
//   [horizontal (String)] "true" or "false"
//   [icon (String)] "true" or "false"
//////////////////////////////////////////////////////////////////////////////////
<% template listSelect %>
  <div id="$(id)" class="list-select<% if designpattern %> $(designpattern)<% end %><% if class %> $(class)<% end %><% if horizontal %> list-select-horizontal<% end %>">
    <ul>
      $(body)
    </ul>
    <% if horizontal %><div class="clearfix hide"></div><% end %>
  </div>
<% end %>

//////////////////////////////////////////////////////////////////////////////////
// listSelectOption
//   [class (String)] class name
//   [width (String)]
//////////////////////////////////////////////////////////////////////////////////
<% template listSelectOption %>
  <li class="list-select-option<% if class %> $(class)<% end %>" data-value="$(value)" tabindex="0" <% if width %>style="width: $(width);"<% end %>><div class="list-select-option-left"><ins class="list-select-mark ihmicomponent-large-radiomark-off"></ins></div><div class="list-select-option-right">$(body)</div></li>
<% end %>
