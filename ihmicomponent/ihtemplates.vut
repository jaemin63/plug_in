//////////////////////////////////////////////////////////////////////////////////
// textboxString
//   [designpattern (String) "touch" or "mouse"]
//   mode (String)  "dataname" or "datanamefilter" or "comment" or "path" or "filepath"
//   [size (Integer)]
//   [height (String)]
//   [width (String)]
//   [errPopClass (String)]
//   [errPopPos (Integer)]
//   [errPopAddFuncKey (Boolean)]
//   [errPopWindowAlert (Boolean)]
//   [unSelect (Boolean)]
//////////////////////////////////////////////////////////////////////////////////
<% template textboxString %>
  <input type="text" id="$(id)" class="text textbox<% if designpattern %> $(designpattern)<% end %>" style="<% if width %>width: $(width);<% end %><% if height %> height: $(height); line-height: $(height);<% end %>"<% if size %> size="$(size)"<% end %><% if unSelect %> unSelect="$(unSelect)"<% end %>></input>
